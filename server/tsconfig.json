{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": false,
  "skipLibCheck": true,
  "typeRoots": ["./node_modules/@types"],
  "types": ["node"],
  "lib": ["ES2022"],
  "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
