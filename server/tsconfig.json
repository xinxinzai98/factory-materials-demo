{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  "emitDecoratorMetadata": false,
    "baseUrl": "./src",
    "paths": {
      "@entities/*": ["entities/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
